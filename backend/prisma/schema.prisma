generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  username     String   @unique
  role         String   @default("USER")
  createdAt    DateTime @default(now())

  leagues        League[]       @relation("AdminLeagues")
  leagueMembers  LeagueMember[]
  predictions    Prediction[]
  scores         Score[]
}

model League {
  id          String   @id @default(uuid())
  name        String
  adminId     String
  inviteCode  String   @unique @default(uuid())
  createdAt   DateTime @default(now())

  admin         User           @relation("AdminLeagues", fields: [adminId], references: [id])
  members       LeagueMember[]
  scores        Score[]
  scoringConfig ScoringConfig?
}

model LeagueMember {
  id       String   @id @default(uuid())
  leagueId String
  userId   String
  joinedAt DateTime @default(now())

  league League @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([leagueId, userId])
}

model GrandPrix {
  id               String   @id @default(uuid())
  year             Int
  round            Int
  name             String
  country          String
  circuit          String
  qualifyingStart  DateTime
  raceStart        DateTime
  hasSprint        Boolean  @default(false)
  isResultEntered  Boolean  @default(false)
  createdAt        DateTime @default(now())

  predictions Prediction[]
  results     GpResult[]
  scores      Score[]

  @@unique([year, round])
}

model Prediction {
  id          String   @id @default(uuid())
  userId      String
  grandPrixId String
  type        String
  value       String
  updatedAt   DateTime @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  grandPrix GrandPrix @relation(fields: [grandPrixId], references: [id], onDelete: Cascade)

  @@unique([userId, grandPrixId, type])
}

model GpResult {
  id          String   @id @default(uuid())
  grandPrixId String
  type        String
  value       String
  enteredAt   DateTime @default(now())

  grandPrix GrandPrix @relation(fields: [grandPrixId], references: [id], onDelete: Cascade)

  @@unique([grandPrixId, type])
}

model Score {
  id           String   @id @default(uuid())
  userId       String
  grandPrixId  String
  leagueId     String
  points       Int
  breakdown    String
  calculatedAt DateTime @default(now())

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  grandPrix GrandPrix @relation(fields: [grandPrixId], references: [id], onDelete: Cascade)
  league    League    @relation(fields: [leagueId], references: [id], onDelete: Cascade)

  @@unique([userId, grandPrixId, leagueId])
}

model ScoringConfig {
  id                    String @id @default(uuid())
  leagueId              String @unique
  pointsP1              Int    @default(10)
  pointsP2              Int    @default(7)
  pointsP3              Int    @default(5)
  pointsPodioBonus      Int    @default(5)
  pointsPole            Int    @default(5)
  pointsFastestLap      Int    @default(5)
  pointsSafetyCar       Int    @default(3)
  pointsRetirement      Int    @default(8)
  pointsConstructor     Int    @default(4)
  pointsSprintPole      Int    @default(3)
  pointsSprintP1        Int    @default(7)
  pointsSprintP2        Int    @default(5)
  pointsSprintP3        Int    @default(3)
  pointsSprintPodioBonus Int   @default(3)
  pointsFastestPitStop  Int    @default(4)

  league League @relation(fields: [leagueId], references: [id], onDelete: Cascade)
}
